<VirtualHost *:{{ wordpress_port }}>
    DocumentRoot {{ wordpress_www_folder }}
    <Directory {{ wordpress_www_folder }}>
        Options FollowSymLinks
        AllowOverride Limit Options FileInfo
        DirectoryIndex index.php
        Require all granted
    </Directory>
    <Directory {{ wordpress_www_folder }}/wp-content>
        Options FollowSymLinks
        Require all granted
    </Directory>
</VirtualHost>

<VirtualHost *:8080>
	
	ServerAdmin webmaster@localhost
    ServerName ubuntu22.04.com
    ServerAlias www.ubuntu22.04.com
    DocumentRoot /var/www/html

</VirtualHost>
